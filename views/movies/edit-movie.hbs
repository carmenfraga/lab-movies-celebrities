<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit {{movies.title}}</h1>

            <hr>

            <form action="/movies/{{movies.id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{movies.title}}">
                </div>
                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre" value="{{movies.genre}}">
                </div>
                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot" value="{{movies.plot}}">
                </div>
                <div class="mb-3">
                    <label for="cast" class="form-label">Cast</label>
                    <select name="cast" id="cast">
                        {{#each stars}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}

                    </select>

                </div>

                <button type="submit" class="btn btn-dark">Save Edit</button>
                <a href="/" class="btn btn-dark">Back to Home page</a>
            </form>


            <hr>


        </div>
    </div>


</div>